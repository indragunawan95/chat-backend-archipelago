{
  "compilerOptions": {
    "target": "ES6", // Specifies the ECMAScript target version
    "module": "commonjs", // Specifies the module code generation
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "./dist", // Redirect output structure to the dist directory
    "rootDir": "./src" // Specifies the root directory of input files
  },
  "include": [
    "src/**/*.ts"
  ], // Include all TypeScript files in the src directory
  "exclude": [
    "node_modules"
  ] // Exclude node_modules from compilation
}